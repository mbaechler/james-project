<httpservers>
    <httpserver>
        <port fixed="5000"/>
        <mappings>
            <mapping>
                <path>/foo</path>
                <servlet>org.apache.james.http.jetty.Ok200</servlet>
            </mapping>
            <mapping>
                <path>/bar</path>
                <servlet>org.apache.james.http.jetty.Bad400</servlet>
            </mapping>
        </mappings>
    </httpserver>
    <httpserver>
        <port random="true"/>
        <mappings>
            <mapping>
                <path>/foo</path>
                <servlet>org.apache.james.http.jetty.Ok200</servlet>
            </mapping>
        </mappings>
        <filters>
            <mapping>
                <path>/*</path>
                <filter>org.apache.james.http.jetty.SpyFilter</filter>
            </mapping>
        </filters>
    </httpserver>
</httpservers>